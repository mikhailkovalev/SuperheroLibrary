@model SuperheroLibrary.Models.Superhero
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Вы действительно хотите удалить героя <b><i>@Model.Name</i></b>?</h3>
<img style='width:50px;height:80px;'
