@model System.Collections.Generic.IEnumerable<SuperheroLibrary.Models.Superability>
@{
    ViewBag.Title = "AbilityList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Список суперспособностей</h3>

<table>
    <tr>
        <th></th>
        <th>Название</th>
        <th>Описание</th>
        <th></th>
    </tr>
    @foreach (var a in Model)
    {
        <tr>
            <td>
                <img style='width:50px;height:80px;'
                     src="data:image/jpeg;base64,@Convert.ToBase64String(a.Image)" />
            </td>
            <td>
                @a.Name
            </td>
            <td>
                @a.Description
            </td>
            <td>
                @Html.ActionLink("Редактировать", "EditAbility", "Home", new { id = a.Id }, null)
            </td>
            <td>
                @Html.ActionLink("Удалить", "DeleteAbility", "Home", new { id = a.Id }, null)
            </td>
        </tr>
    }

</table>
